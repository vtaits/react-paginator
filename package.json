{
  "name": "react-paginator-root",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "storybook dev -p 6006",
    "build": "bun --filter='*' run build",
    "lint": "bun --filter='*' run lint",
    "test:unit": "bun --filter='*' run test:unit",
    "test:ts": "bun --filter='*' run test:ts",
    "test": "bun run lint && bun run test:ts && bun run test:unit",
    "validate": "bun run test && bun run build"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:vtaits/react-paginator.git"
  },
  "author": "Vadim Taits",
  "license": "MIT",
  "devDependencies": {
    "@storybook/react-vite": "^9.0.10",
    "cross-env": "^7.0.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rimraf": "^6.0.1",
    "storybook": "^9.0.10",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "@types/bun": "latest"
  },
  "packageManager": "pnpm@10.12.1"
}
